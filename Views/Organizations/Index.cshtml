@model IEnumerable<TeleDocTest.Models.Organization>

@{
    ViewBag.Title = "Главная страница";
}

<h2>Список организаций</h2>

<p>
    @Html.ActionLink("Создать организацию", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Founders)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inn)
            </td>
            <td>
                @foreach (var founder in item.Founders)
                {
                    <p>
                        @Html.DisplayFor(founderItem => founder.Founder.LastName)
                        @Html.DisplayFor(founderItem => founder.Founder.FirstName)
                        @Html.DisplayFor(founderItem => founder.Founder.MiddleName)
                        [ID:@Html.DisplayFor(founderItem => founder.Founder.Id)]
                    </p>
                }
            </td>

            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
